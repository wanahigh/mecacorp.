{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comments list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>User</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td><a href="{{ path('entity_comment_show', { 'id': comment.id }) }}">{{ comment.id }}</a></td>
                <td>{{ comment.title }}</td>
                <td>{{ comment.user }}</td>
                <td>{{ comment.content }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entity_comment_show', { 'id': comment.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entity_comment_edit', { 'id': comment.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entity_comment_new') }}">Create a new comment</a>
        </li>
    </ul>
{% endblock %}
